<%#<script src="http://bxslider.com/sites/default/files/jquery.bxSlider.min.js" type="text/javascript"></script>%>
<script type="text/javascript">
  $(document).ready(function(){
    $('#flickr-carousel').bxSlider();
  });
</script>


<div id="escape-container" class="container">
  <div id="escape-row" class="row">
    <div id='<%="escape_#{@escape.id}"%>'>
      <h1><%= @escape.title %></h1>

      <ul id='flickr-carousel' class="sixcol">
          <% @flickr_photos.each do |fp| %>
            <li class="item">
              <img alt="<%= fp.title %>" src="<%=fp.url_med%>">
            </li>
          <% end %>
      </ul>


      <div id='attractions' class='escape_foursquare_venues'>
        <% @foursquare_spots.each do |venue| %>
          <div id="attraction_<%=venue.id%>">
            <h2><%= venue.name %></h2>
            <h4><%= venue.checkins %> others escaped here </h4>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
